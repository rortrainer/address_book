<%= form_for(@entry, :remote => true) do |f| %>
    <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, required: true  %>
  </div>
  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, :rows => 3 %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, required: true,:minimum => 10 %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email, placeholder: 'Must be valid email', required: true  %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
